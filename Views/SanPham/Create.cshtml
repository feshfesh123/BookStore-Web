@model BookStoreWeb.Models.Domain.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2> Thêm Mới</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Tên Sách</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProducQuantity" class="control-label"> Số Lượng</label>
                <input asp-for="ProducQuantity" class="form-control" />
                <span asp-validation-for="ProducQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tacgia" class="control-label"> Tác Giả</label>
                <input asp-for="Tacgia" class="form-control" />
                <span asp-validation-for="Tacgia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NXB" class="control-label"> Nhà Xuất Bản</label>
                <input asp-for="NXB" class="form-control" />
                <span asp-validation-for="NXB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nhacungcap" class="control-label"> Nhà Cung Cấp</label>
                <input asp-for="Nhacungcap" class="form-control" />
                <span asp-validation-for="Nhacungcap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"> Giá Tiền</label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"> Hình Ảnh</label>
                <input type="file" asp-for="ProductImage" class="form-control" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"> Mô Tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label">Loại Sản Phẩm</label>
                <br />
                <select asp-for="TypeId" class="form-control" asp-items="@ViewBag.TypeId">
                </select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <br />
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
</div>

