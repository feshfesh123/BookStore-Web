@model BookStoreWeb.Models.Domain.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}


<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Header-->
        <div class="card-header border-0">
            <h1>Details</h1>

            <div>
                <h4>Order</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DateTime)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DateTime)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.CreatUser)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </dl>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr style="        font-size: 18px" class="table-primary">
                            <td>Tên Sách</td>
                            <td>Đơn Giá</td>
                            <td>Số Lượng</td>
                            <td>Thành Tiền</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>@item.Product.ProductName</td>
                                <td>@item.Product.ProductPrice</td>
                                <td>@item.Quantity</td>
                                <td>@item.Amount</td>
                            </tr>
                        }
                    </tbody>
                    <tr>
                        <td align="right" colspan="3">Tổng hóa đơn</td>
                        <td> @Model.TotalPrice </td>
                    </tr>
                </table>

            </div>
            <div>
                @*<a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |*@
                <a asp-action="Temp">Back to List</a>
            </div>
        </div>
        <!--end::Header-->
    </div>
</div>



@section Scripts{
    <script type="text/javascript">
        $('#menu-item-order').addClass('menu-item-active');
    </script>
}


