@model BookStoreWeb.Models.ProductModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Trang Chủ > Chi tiết sản phẩm</h3>
<br />
<br />


<div class="row">

    <div class="col-6 col-md-4">
        <img src="@Html.DisplayFor(model => model.ProductImage)" width="100%" height="400px" atl="image" />
    </div>
    <div class="col-12 col-md-8">
        <dl class="row">
            <div style="font-size: 30px" class="col-sm-10"><b>@Html.DisplayFor(model => model.ProductName)</b></div>
            <div class="w-100"></div>
            <br />
            <div class="col-sm-4">Tác Giả : </div>
            <div style=" color:chocolate " class="col-sm-6">@Html.DisplayFor(model => model.Tacgia)</div>
            <div class="w-100"></div>

            <div class="col-sm-4">NXB :</div>
            <div style=" color:chocolate " class="col-sm-6">@Html.DisplayFor(model => model.NXB)</div>
            <div class="w-100"></div>

            <div class="col-sm-4">Nhà Cung Cấp :</div>
            <div style=" color:chocolate " class="col-sm-6">@Html.DisplayFor(model => model.Nhacungcap)</div>
            <div class="w-100"></div>

            <br>
            <div style="font-size: 25px; color:darkred" class="col-sm-10">@Html.DisplayFor(model => model.ProductPrice)  &nbsp; đ</div>
            <div class="w-100"></div>

            <br />
            <div class="col-sm-10"><b>@Html.DisplayFor(model => model.Description)</b></div>
            <div class="w-100"></div>
            <br />
            <br />

            <div class="col-sm-4">
                <a class="btn btn-warning" asp-controller="Cart" asp-action="Buy" asp-route-id="@Model.ProductId">Thêm vào giỏ hàng</a>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-success" asp-controller="Cart" asp-action="Buy" asp-route-id="@Model.ProductId">Thanh toán</a>
            </div>
        </dl>
    </div>
</div>

<br/>
<h3>Bình luận</h3>
<br />
<div class="row">
    <form asp-action="Comment" asp-controller="Detail" method="post">
        <input name="ProductId" value="@Model.ProductId" hidden/>
        <textarea name="Content" rows="3" cols="100"></textarea>

        <button type="submit" class="btn">Gửi</button>
    </form>

</div>

<br />
<div class="row">
    @foreach (var comment in Model.Comments)
    {
        <div class="col-12 comment-item">
            <div class="row">
                <div class="col-4">@comment.User.FirstName @comment.User.LastName (@comment.CreatedAt)</div>
                <div class="col-8">: @comment.Content</div>
            </div>
        </div>
    }
</div>