@model BookStoreWeb.Models.Domain.Discount

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Discount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên khuyến mãi :</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Percent" class="control-label">Phần trăm khuyến mãi :</label>
                <input asp-for="Percent" class="form-control" />
                <span asp-validation-for="Percent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatDate" class="control-label">Ngày tạo :</label>
                <input asp-for="CreatDate" class="form-control" />
                <span asp-validation-for="CreatDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateValid" class="control-label">Ngày hết hạn :</label>
                <input asp-for="DateValid" class="form-control" />
                <span asp-validation-for="DateValid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityDiscount" class="control-label">Số lượng :</label>
                <input asp-for="QuantityDiscount" class="form-control" />
                <span asp-validation-for="QuantityDiscount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

